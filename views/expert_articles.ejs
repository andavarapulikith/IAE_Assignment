      <link rel="stylesheet" href="../css/searchbar.css">
      <link rel="stylesheet" href="../css/expertarticles.css">
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" ></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js" ></script>
</head>
<body>

  <%- include('partials/loading') %>
    <%- include('partials/navbar')-%>
    <%- include('partials/cursor') %>

    <h1 class="title_expert">Your Blogs</h1>

    <%- include('partials/searchbar') %>

    <% if(data.length!==0) { %>
   <div style="min-height: 600px;" class="your_blogs">

    <% data.forEach(ele => { %>
          <div id="<%= ele['id'] %>" class="your_blog">
            <img class="blog_image" src="<%= ele['image_link'] %>" alt="">

            <div class="content">
              <h2>
                <%= ele['title'] %>
              </h2>
              <!-- <p><%- ele['content'].substring(0,150) %>...</p> -->
            </div>

            <a href="/posts/compose?id=<%= ele['id'] %>"> <button class="edit">EDIT</button></a>                                               

            <a href="javascript:void(0)"  data-href="/expert_articles/delete/<%= ele['id'] %>" class="delete-btn-link">
              <button class="delete" >DELETE</button>
            </a>
          </div>
    <% }) %>

    </div>
 <% }%>
 <% if(data.length===0) { %>
  <div class="not_available" style="height: 300px;text-align: center;display: flex;align-items: center;justify-content: center;flex-direction: column;">

    <img src="../images/null.png" alt="">
 </div>
  <%} %>


    <%- include('partials/footer')-%>
